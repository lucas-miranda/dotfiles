client.focused          #B152FF #333438 #E2E8DD #E2E8DD   #B152FF
client.focused_inactive #6B6B6B #333438 #E2E8DD #E2E8DD   #6B6B6B
client.unfocused        #6B6B6B #333438 #E2E8DD #E2E8DD   #6B6B6B
client.urgent           #BD2C40 #333438 #E2E8DD #E2E8DD   #BD2C40
client.placeholder      #E2E8DD #333438 #E2E8DD #E2E8DD   #01A7C2

# windows specifics rules
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# startup
exec_always --no-startup-id ~/.init
