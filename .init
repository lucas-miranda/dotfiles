#!/bin/bash

# starts picom
if [[ -x "$(command -v picom)" ]]
then
    killall -q picom
    while pgrep -u $UID -x picom >/dev/null; do sleep 1; done
    picom &> /dev/null &
fi

# desktop background
if [[ -f "$HOME/.local/bin/refresh-wallpaper" ]]
then
    $HOME/.local/bin/refresh-wallpaper &> /dev/null &
fi

# deadd notification center
if [[ -x "$(command -v deadd-notification-center)" ]]
then
    killall -q deadd-notification-center
    deadd-notification-center &> /dev/null &
fi


if [[ -x "$(playerctld daemon)" ]]
then
    killall -q playerctld
    playerctld daemon
fi

# kill any leftover trayer processes
if [[ -n $(pgrep -u $UID -x trayer) ]]
then
    killall trayer
fi

# start trayer
trayer \
    --edge top \
    --align right \
    --SetDockType true \
    --SetPartialStrut true \
    --expand true \
    --distancefrom top \
    --distance 1 \
    --widthtype request \
    --height 16 \
    --monitor 0 \
    --margin 0 \
    --transparent true \
    --alpha 0 \
    --tint 0x303030 \
    &
